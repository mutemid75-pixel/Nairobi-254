name: Monster v2.1 APK Build with Auto-Version

on:
  push:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    name: Build Monster APK
    runs-on: ubuntu-latest

    env:
      JAVA_HOME: /usr/lib/jvm/java-17-temurin

    steps:
      # 1. Checkout repository
      - name: Checkout Repository
        uses: actions/checkout@v4

      # 2. Set up Java 17
      - name: Set up Java 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: 17

      # 3. Set up Android SDK
      - name: Set up Android SDK
        uses: android-actions/setup-android@v3
        with:
          api-level: 34
          build-tools: 34.0.0

      # 4. Make Gradle executable
      - name: Make Gradle Executable
        run: chmod +x ./gradlew

      # 5. Clean build
      - name: Clean Build
        run: ./gradlew clean

      # 6. Generate version string from date + commit hash
      - name: Set APK Version Name
        id: versioning
        run: |
          DATE=$(date +'%Y%m%d')
          SHORT_HASH=$(git rev-parse --short HEAD)
          VERSION_NAME="v2.1-${DATE}-${SHORT_HASH}"
          echo "VERSION_NAME=$VERSION_NAME" >> $GITHUB_ENV
          echo "Generated version: $VERSION_NAME"

      # 7. Build Debug APK with version
      - name: Build Debug APK
        run: ./gradlew assembleDebug -PversionName=$VERSION_NAME

      # 8. Build Release APK with version (optional)
      - name: Build Release APK
        run: ./gradlew assembleRelease -PversionName=$VERSION_NAME || echo "Release build skipped"

      # 9. Upload Debug APK
      - name: Upload Debug APK
        uses: actions/upload-artifact@v4
        with:
          name: Monster-${{ env.VERSION_NAME }}-Debug-APK
          path: app/build/outputs/apk/debug/app-debug.apk

      # 10. Upload Release APK
      - name: Upload Release APK
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: Monster-${{ env.VERSION_NAME }}-Release-APK
          path: app/build/outputs/apk/release/app-release.apk
